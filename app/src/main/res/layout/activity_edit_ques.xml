<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="7"
    tools:context="com.a1694158.harshkumar.myquiz.Edit_ques">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/edt_questione"
        android:singleLine="false"
        android:layout_weight="1"
        android:hint="Question"
        android:lines="3"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/edt_chAe"
        android:hint="Choice A"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/edt_chBe"
        android:hint="Choice B"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/edt_chCe"
        android:hint="Choice C"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/edt_chDe"
        android:hint="Choice D"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/edt_corectAnse"
        android:hint="Correct Answer !"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/edt_btne"
        android:text="Edit"
        android:textSize="20sp"
        />


</LinearLayout>
