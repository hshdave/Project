<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="com.a1694158.harshkumar.myquiz.Quiz">

    <TextView
        android:id="@+id/txt_qque"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="10"
        android:textColor="#ffbf00"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/txt_qque"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="148dp"
        android:layout_weight="60"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rd_chA"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="Choice"
            android:textColor="#867979"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rd_chB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choice"
            android:textColor="#867979"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rd_chC"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="choice"
            android:textColor="#867979"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rd_chD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="choice"
            android:textColor="#867979"
            android:textSize="20sp" />

    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_qnxt"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#00ffbf"
            android:gravity="center"
            android:text="Next"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_fns"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#bfff00"
            android:text="Finish"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:textColor="@android:color/darker_gray"
        android:textSize="20sp" />

</LinearLayout>
